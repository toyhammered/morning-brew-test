<div>
  <h1><%= @newsletter.title %></h1>
  <p >Release Date: <%= @newsletter.release_date %></p>

  <table class="table">
    <thead class="">
      <tr>
        <th class="text-center" colspan="3">Stories</th>
      </tr>
    </thead>

    <tbody>
      <% @stories.each do |story| %>
      <tr class="text-center">
        <td><%= link_to story.title, [@newsletter, story] %></td>
        <td><%= link_to 'Edit', edit_newsletter_story_path(@newsletter, story), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', newsletter_story_path(@newsletter, story), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>






<%= link_to 'Add New Story', new_newsletter_story_path(@newsletter), class: 'btn btn-primary' %>

<%= link_to 'Back', newsletters_path, class: 'btn btn-light' %>
