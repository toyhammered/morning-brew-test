<h1>All Stories</h1>

<table class="table">
  <thead>
    <tr>
      <th class="text-center" colspan="4">Stories</th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr class="text-center">
        <td><%= link_to story.title, newsletter_story_path(story.newsletter_id, story) %></td>
        <td><%= link_to 'Edit', edit_newsletter_story_path(story.newsletter_id, story), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', newsletter_story_path(story.newsletter_id, story), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
